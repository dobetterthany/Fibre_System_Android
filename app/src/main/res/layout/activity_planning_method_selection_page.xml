<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Planning_Method_Selection_Page">

    <Button
        android:id="@+id/button2"
        android:layout_width="612dp"
        android:layout_height="738dp"
        android:layout_marginStart="28dp"
        android:onClick="goChooseShapePage"
        android:text="Straight into planning"
        android:backgroundTint="#c6d8f5"
        android:textColor="#1a2536"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.53" />

    <Button
        android:id="@+id/button4"
        android:layout_width="612dp"
        android:layout_height="738dp"
        android:layout_marginEnd="28dp"
        android:backgroundTint="#c6d8f5"
        android:text="Choose your bathroom size"
        android:textColor="#1a2536"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.564" />

</androidx.constraintlayout.widget.ConstraintLayout>